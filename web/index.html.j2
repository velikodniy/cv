<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ author }} - Resume</title>
    <meta name="description" content="{{ author }}'s professional resume - {{ positions | join(', ') }}">
    <meta name="author" content="{{ author }}">
    <meta name="generator" content="CV template based on https://github.com/velikodniy/cv">
    <meta name="robots" content="index, follow">

    <!-- OpenGraph / Facebook -->
    <meta property="og:type" content="profile">
    <meta property="og:title" content="{{ author }} - Resume">
    <meta property="og:description" content="{{ author }}'s professional resume - {{ positions | join(', ') }}">
    <meta property="og:image" content="{{ base_url }}/vadim.jpeg">
    <meta property="og:url" content="{{ base_url }}">
    <meta property="og:logo" content="{{ base_url }}/vadim.jpeg">
    <meta property="profile:first_name" content="{{ author.split()[0] }}">
    <meta property="profile:last_name" content="{{ author.split()[-1] }}">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="{{ author }} - Resume">
    <meta name="twitter:description" content="{{ author }}'s professional resume - {{ positions | join(', ') }}">
    <meta name="twitter:image" content="{{ base_url }}/vadim.jpeg">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="192x192" href="android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="android-chrome-512x512.png">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="resume" itemscope itemtype="https://schema.org/Person">
        <aside class="resume__sidebar">
            <header class="profile">
                <img src="vadim.jpeg" alt="Photo of {{ author }}" class="profile__avatar" width="192" height="192" loading="eager" itemprop="image">
                <h1 class="profile__name" itemprop="name">{{ author }}</h1>
                <p class="profile__title" itemprop="jobTitle">{{ positions | join(" · ") }}</p>
            </header>

            <address class="contact" aria-label="Contact information">
                <ul class="contact__list" role="list">
                    <li>
                        <a href="mailto:{{ contacts.email }}" class="contact__link" rel="noopener" aria-label="Send email to {{ contacts.email }}" itemprop="email">
                            <i class="fas fa-envelope contact__icon" aria-hidden="true"></i>
                            <span>{{ contacts.email }}</span>
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/{{ contacts.github }}" class="contact__link" rel="noopener nofollow" target="_blank" aria-label="Visit {{ author }}'s GitHub profile" itemprop="sameAs">
                            <i class="fab fa-github contact__icon" aria-hidden="true"></i>
                            <span>{{ contacts.github }}</span>
                        </a>
                    </li>
                    <li>
                        <a href="https://linkedin.com/in/{{ contacts.linkedin }}" class="contact__link" rel="noopener nofollow" target="_blank" aria-label="Visit {{ author }}'s LinkedIn profile" itemprop="sameAs">
                            <i class="fab fa-linkedin contact__icon" aria-hidden="true"></i>
                            <span>{{ contacts.linkedin }}</span>
                        </a>
                    </li>
                </ul>
            </address>

            <section class="personal-info" aria-labelledby="personal-info-title">
                <h2 id="personal-info-title" class="section__subtitle">Personal Information</h2>
                <dl class="personal-info__list">
                    <div class="personal-info__item">
                        <dt class="personal-info__label">Location</dt>
                        <dd class="personal-info__value" itemprop="address">{{ location }}</dd>
                    </div>
                    <div class="personal-info__item">
                        <dt class="personal-info__label">Languages</dt>
                        <dd class="personal-info__value">
                            {% for language in skills.languages %}
                            <span itemprop="knowsLanguage">{{ language.name }} ({{ language.level }})</span>{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </dd>
                    </div>
                </dl>
            </section>
        </aside>

        <main class="resume__main">
            <section class="section" aria-labelledby="about-title">
                <h2 id="about-title" class="section__title">About Me</h2>
                <p class="content-text" itemprop="description">{{ about | safe }}</p>
            </section>

            <section class="section" aria-labelledby="experience-title">
                <h2 id="experience-title" class="section__title">Experience</h2>
                <div itemprop="hasOccupation" itemscope itemtype="https://schema.org/Occupation">
                {% for job in experience %}
                <article class="experience-item">
                    <header class="experience-item__header">
                        <h3 class="experience-item__title" itemprop="name">{{ job.position }}</h3>
                        <span class="experience-item__location">{{ job.location }}</span>
                    </header>
                    <div class="experience-item__meta">
                        <p class="experience-item__company" itemprop="occupationLocation" itemscope itemtype="https://schema.org/Place">
                            <span itemprop="name">{{ job.company }}</span>
                        </p>
                        <time class="experience-item__date">{{ job.dates.start }} — {{ job.dates.end | default("Present") }}</time>
                    </div>
                    <ul class="highlights-list" itemprop="description">
                        {% for highlight in job.highlights %}
                        <li class="highlights-list__item">{{ highlight | markdown_links | safe }}</li>
                        {% endfor %}
                    </ul>
                    {% if job.techStack %}
                    <div class="tech-stack">
                        {% for tech in job.techStack %}
                        <span class="tech-chip">{{ tech }}</span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </article>
                {% endfor %}
                </div>
            </section>

            <section class="section" aria-labelledby="education-title">
                <h2 id="education-title" class="section__title">Education</h2>
                {% for edu in education %}
                <article class="experience-item" itemscope itemtype="https://schema.org/EducationalOccupationalCredential" itemprop="hasCredential">
                    <header class="experience-item__header">
                        <h3 class="experience-item__title" itemprop="name">{{ edu.degree }}</h3>
                        <time class="experience-item__date" itemprop="dateCreated">{{ edu.dates.start }} — {{ edu.dates.end }}</time>
                    </header>
                    <div class="experience-item__meta">
                        <p class="experience-item__company" itemprop="recognizedBy" itemscope itemtype="https://schema.org/EducationalOrganization">
                            <span itemprop="name">{{ edu.institution }}</span>
                        </p>
                        <span></span>
                    </div>
                    <ul class="highlights-list" itemprop="description">
                        {% for detail in edu.details %}
                        <li class="highlights-list__item">{{ detail | markdown_links | safe }}</li>
                        {% endfor %}
                        <li class="highlights-list__item">GPA: {{ edu.gpa }}</li>
                    </ul>
                </article>
                {% endfor %}
            </section>

            <section class="section" aria-labelledby="patents-title">
                <h2 id="patents-title" class="section__title">Patents</h2>
                <ul class="highlights-list">
                    {% for patent in patents %}
                    <li class="highlights-list__item">
                        {{ patent.title }} (<a href="{{ patent.link }}" target="_blank" rel="noopener nofollow">{{ patent.code }}</a>)
                    </li>
                    {% endfor %}
                </ul>
            </section>

        </main>
    </div>

    <footer class="footer">
        <small>Updated on {{ today }} • Based on <a href="https://github.com/velikodniy/cv" target="_blank" rel="noopener">velikodniy/cv</a></small>
    </footer>

    <div class="actions" role="toolbar" aria-label="Page actions">
            <button type="button" class="btn btn--icon btn--secondary" onclick="toggleTheme()" aria-label="Toggle between light and dark theme" aria-pressed="false">
                <i id="theme-icon" class="fas fa-moon" aria-hidden="true"></i>
            </button>
            <a href="vvelicodnii-cv.pdf" download="vvelicodnii-cv.pdf" class="btn btn--primary" type="application/pdf" aria-label="Download CV as PDF">
                <i class="fas fa-download" aria-hidden="true"></i>
                <span>Download CV</span>
            </a>
        </div>
    </div>

    <script>
        function toggleTheme() {
            const html = document.documentElement;
            const themeIcon = document.getElementById('theme-icon');
            const themeButton = themeIcon.closest('button');
            const currentTheme = html.getAttribute('data-theme');

            if (currentTheme === 'dark') {
                html.removeAttribute('data-theme');
                themeIcon.className = 'fas fa-moon';
                themeButton.setAttribute('aria-pressed', 'false');
                localStorage.setItem('theme', 'light');
            } else {
                html.setAttribute('data-theme', 'dark');
                themeIcon.className = 'fas fa-sun';
                themeButton.setAttribute('aria-pressed', 'true');
                localStorage.setItem('theme', 'dark');
            }
        }


        document.addEventListener('DOMContentLoaded', function () {
            const savedTheme = localStorage.getItem('theme');
            const themeIcon = document.getElementById('theme-icon');
            const themeButton = themeIcon.closest('button');

            if (savedTheme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
                themeIcon.className = 'fas fa-sun';
                themeButton.setAttribute('aria-pressed', 'true');
            }
        });
    </script>
</body>

</html>
